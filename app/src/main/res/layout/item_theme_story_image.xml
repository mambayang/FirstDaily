<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_5"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:id="@+id/layout_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_14"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"
        android:paddingTop="@dimen/margin_14">

        <TextView
            android:id="@+id/tv_theme_story_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_weight="1"
            android:gravity="left"
            android:text="啥地方了健康老师的飞洒发"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/iv_theme_story_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/test_card" />
    </LinearLayout>

</android.support.v7.widget.CardView>
